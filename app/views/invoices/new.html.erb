<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Create New Invoice</h1>

<h3>Client: <%= @client.full_name %></h3>
<p>Points Available: <%= @client.points %></p>

<%= form_for @invoice do |f| %>
  <%= f.collection_check_boxes :id, @sales, :id, :sale_for_invoice do |b| %>
    <p>
      <%= b.check_box %>
      <%= b.label %>
    </p>
  <% end %>
  <div>
    <%= fields_for @client do |g| %>
      <%= g.hidden_field :id %>
      <%= g.label "Apply Points" %>
      <%= g.number_field :points, value: 0, step: 1000 %>
    <% end %>
  </div><br>

  <%= f.submit "Generate Invoice" %>
<% end %>
